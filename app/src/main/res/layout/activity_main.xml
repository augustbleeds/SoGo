<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginPage"
    android:background="#FFC107">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/psnEmail"
        android:background="@drawable/back"
        android:hint="  Email"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/psnPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/psnPass"
        android:background="@drawable/back"
        android:hint=" Password"
        android:layout_below="@+id/psnEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up!"
        android:id="@+id/btnSignup"
        android:layout_marginTop="56dp"
        android:background="#FFA000"
        android:layout_alignTop="@+id/psnPass"
        android:layout_alignStart="@+id/psnPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In!"
        android:id="@+id/btnLogin"
        android:background="#FFA000"
        android:layout_alignTop="@+id/btnSignup"
        android:layout_alignEnd="@+id/psnPass" />
</RelativeLayout>
